<!DOCTYPE html>
<html>
  <head>
    
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href="https://cdn.datatables.net/v/bs5/dt-1.13.7/r-2.5.0/datatables.min.css" rel="stylesheet">
</head>
  <body>
    <h1>Pets</h1>

    <form action="/pets" method="post">
        <input type="text" name="name" placeholder="Name">
        <input type="text" name="type" placeholder="Type">
        <input type="text" name="age" placeholder="Age">
        <input type="submit" value="Add Pet">
    </form>

    <br>

    <a href="/pets/csv-export" class="btn btn-primary">Export to CSV</a>
    <a href="/pets/excel-export" class="btn btn-primary">Export to Excel</a>

    <table id="petsTable" class="table table-bordered table-striped">
        <thead>
            <tr>
                <td>Name</td>
                <td>Type</td>
                <td>Age</td>
                <td>Actions</td>
            </tr>
        </thead>

        <tbody>
            <% for(var i=0; i< pets.length; i++) {%>
                <tr>
                    <td><%= pets[i].name %></td>
                    <td><%= pets[i].type %></td>
                    <td><%= pets[i].age %></td>
                    <td><a href="/pets/delete?_id=<%=pets[i]._id%>" 
                        onclick="return confirm('Are you sure you want to delete the record?')">Delete</a>
                        | 
                        <a href="/pets/edit?_id=<%=pets[i]._id%>" >Edit</a>
                    
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/v/bs5/dt-1.13.7/r-2.5.0/datatables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function(){
            $('#petsTable').DataTable({
                "responsive":true
            });
        });
    </script>
</body>
</html>
